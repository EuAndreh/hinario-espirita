%html
  %head
    %link{rel: "stylesheet", href: "style.css"}
    %meta{charset: "utf-8"}
    %title Hinário Espírita
  %body
    %h1
      %a{href: "http://hinarioespirita.com.br", title: "Início"}
        Hinário espírita

    %ul.nav
      %li
        %a{href: "Hinário.pdf", title: "Hinário.pdf", target: "_blank"}
          Hinário
      %li
        %a{href: "Cifras.pdf", title: "Cifras.pdf", target: "_blank"}
